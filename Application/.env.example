##############################
# Configurações da Aplicação #
##############################

# Nome da aplicação (ex: Laravel, MeuApp)
APP_NAME=Laravel

# Ambiente da aplicação (ex: local, production, staging)
APP_ENV=local

# Chave secreta usada para criptografia (gerada pelo comando artisan key:generate)
APP_KEY=

# Ativa/desativa modo debug (true para desenvolvimento, false para produção)
APP_DEBUG=true

# URL base da aplicação (ex: http://localhost, https://meusite.com)
APP_URL=http://localhost

##############################
# Configurações de Localização #
##############################

# Idioma principal da aplicação (ex: en, pt_BR)
APP_LOCALE=en

# Idioma de fallback caso o principal não exista
APP_FALLBACK_LOCALE=en

# Localização usada pelo Faker para geração de dados fake (ex: en_US, pt_BR)
APP_FAKER_LOCALE=en_US

##############################
# Manutenção                 #
##############################

# Driver de manutenção (ex: file, database)
APP_MAINTENANCE_DRIVER=file

# Store de manutenção (usado se o driver for database)
# APP_MAINTENANCE_STORE=database

##############################
# PHP                        #
##############################

# Número de workers para o servidor embutido do PHP
PHP_CLI_SERVER_WORKERS=4

##############################
# Segurança                  #
##############################

# Número de rounds para o algoritmo bcrypt (quanto maior, mais seguro e lento)
BCRYPT_ROUNDS=12

##############################
# Logs                       #
##############################

# Canal principal de logs (ex: stack, single, daily)
LOG_CHANNEL=stack

# Canais empilhados para logs
LOG_STACK=single

# Canal para logs de depreciação (null para desativar)
LOG_DEPRECATIONS_CHANNEL=null

# Nível de log (ex: debug, info, warning, error)
LOG_LEVEL=debug

##############################
# Banco de Dados             #
##############################

# Tipo de conexão (ex: sqlite, mysql, pgsql)
DB_CONNECTION=mysql

# Host do banco de dados
DB_HOST=mysql-api-backend

# Porta do banco de dados
DB_PORT=3306

# Nome do banco de dados
DB_DATABASE=desafio-super-backend

# Usuário do banco de dados
DB_USERNAME=root

# Senha do banco de dados
DB_PASSWORD="123123"

##############################
# Sessão                     #
##############################

# Driver de sessão (ex: file, cookie, database, redis)
SESSION_DRIVER=database

# Tempo de vida da sessão em minutos
SESSION_LIFETIME=120

# Ativa criptografia da sessão (true/false)
SESSION_ENCRYPT=false

# Caminho da sessão
SESSION_PATH=/

# Domínio da sessão (null para padrão)
SESSION_DOMAIN=null

##############################
# Broadcast                  #
##############################

# Driver de broadcast (ex: log, pusher, redis)
BROADCAST_CONNECTION=log

##############################
# Arquivos                   #
##############################

# Disco padrão para arquivos (ex: local, s3)
FILESYSTEM_DISK=local

##############################
# Filas                      #
##############################

# Driver de filas (ex: sync, database, redis)
QUEUE_CONNECTION=database

##############################
# Cache                      #
##############################

# Store de cache (ex: file, database, redis)
CACHE_STORE=database

# Prefixo para as chaves de cache
# CACHE_PREFIX=

##############################
# Memcached                  #
##############################

# Host do Memcached
MEMCACHED_HOST=127.0.0.1

##############################
# Redis                      #
##############################

# Cliente Redis (ex: phpredis, predis)
REDIS_CLIENT=phpredis

# Host do Redis
REDIS_HOST=127.0.0.1

# Senha do Redis (null se não houver)
REDIS_PASSWORD=null

# Porta do Redis
REDIS_PORT=6379

##############################
# E-mail                     #
##############################

# Driver de envio de e-mail (ex: smtp, sendmail, log)
MAIL_MAILER=log

# Esquema do e-mail (ex: null, tls, ssl)
MAIL_SCHEME=null

# Host do servidor de e-mail
MAIL_HOST=127.0.0.1

# Porta do servidor de e-mail
MAIL_PORT=2525

# Usuário do e-mail
MAIL_USERNAME=null

# Senha do e-mail
MAIL_PASSWORD=null

# Endereço de origem dos e-mails
MAIL_FROM_ADDRESS="hello@example.com"

# Nome de origem dos e-mails
MAIL_FROM_NAME="${APP_NAME}"

##############################
# AWS                        #
##############################

# Chave de acesso AWS
AWS_ACCESS_KEY_ID=

# Chave secreta AWS
AWS_SECRET_ACCESS_KEY=

# Região padrão AWS (ex: us-east-1, sa-east-1)
AWS_DEFAULT_REGION=us-east-1

# Bucket S3
AWS_BUCKET=

# Usa endpoint estilo path (true/false)
AWS_USE_PATH_STYLE_ENDPOINT=false

##############################
# Vite                       #
##############################

# Nome da aplicação para Vite
VITE_APP_NAME="${APP_NAME}"

# Nome da aplicação para Vite (duplicado)
VITE_APP_NAME="${APP_NAME}"

##############################
# Octane                     #
##############################

# Servidor Octane (ex: swoole, roadrunner)
OCTANE_SERVER=swoole

##############################
# Chaves de Segurança        #
##############################

# Chave de segurança customizada
SECURITY_KEY="123123"
